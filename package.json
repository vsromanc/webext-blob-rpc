{
  "name": "webext-blob-rpc",
  "version": "0.3.0",
  "description": "Type-safe RPC for browser extensions with native Blob support via MessagePort",
  "author": "Vasyl Romanchak <vasyl.romanchak@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vsromanc/webext-blob-rpc"
  },
  "keywords": [
    "browser-extension",
    "webextension",
    "chrome-extension",
    "manifest-v3",
    "mv3",
    "rpc",
    "messaging",
    "messageport",
    "blob",
    "blob-transfer",
    "structured-clone",
    "content-script",
    "service-worker",
    "type-safe",
    "typescript"
  ],
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "static"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc",
    "verify": "pnpm typecheck && pnpm test && pnpm build",
    "prepublishOnly": "pnpm verify",
    "build:example": "esbuild example/background.js example/content.js --bundle --outdir=example/dist --format=iife && cp static/bridge.html static/bridge.js example/manifest.json example/dist/"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  }
}
